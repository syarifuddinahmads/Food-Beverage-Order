<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="95dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <LinearLayout
                android:id="@+id/banner_info"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@drawable/card_component_primary_background"
                android:orientation="vertical"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="12dp">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_transaction"
                android:layout_below="@+id/banner_info"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:background="@drawable/card_component_background"
                android:orientation="vertical"
                android:layout_marginBottom="18dp"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_centerHorizontal="true"
                tools:ignore="UselessParent"
                android:layout_below="@id/history_transaction">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_green_dark"
                        android:orientation="vertical"
                        android:layout_marginRight="12dp"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_blue_light"
                        android:orientation="vertical"
                        android:layout_marginRight="12dp"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical"
                        android:layout_marginRight="12dp"/>


                </LinearLayout>



            </HorizontalScrollView>



        </RelativeLayout>


    </ScrollView>

</FrameLayout>